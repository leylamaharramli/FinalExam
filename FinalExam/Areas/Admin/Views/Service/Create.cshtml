@model ServiceCreateVM
<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group col-md-6">
        <label asp-for="Title" for="inputEmail4">Name</label>
        <input asp-for="Title" class="form-control" placeholder="Name">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="Details" for="inputEmail4">Details</label>
        <input asp-for="Details" class="form-control" placeholder="Enter details">
        <span asp-validation-for="Details" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="Image" for="inputEmail4">Image</label>
        <input asp-for="Image" class="form-control" >
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="CategoryId" for="inputState">Category</label>
        <select asp-for="CategoryId" class="form-control">
                @foreach(var item in ViewBag.Categories)
                {
                    <option value="@item.Id">@item.Name</option>
                }
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>