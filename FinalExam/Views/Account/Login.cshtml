
@model LoginVM
<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form method="post" asp-action="Login" asp-controller="Account">
                   
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <!-- Email input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input asp-for="UsernameorEmail" class="form-control form-control-lg"
                               placeholder="Enter a valid email address or username" />
                        <label asp-for="UsernameorEmail" for="form3Example3">Email address or Username</label>
                    </div>

                    <!-- Password input -->
                    <div data-mdb-input-init class="form-outline mb-3">
                        <input asp-for="Password" class="form-control form-control-lg"
                               placeholder="Enter password" />
                        <label asp-for="Password" for="form3Example4">Password</label>
                    </div>

                   

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" >
                            Login
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account? <a asp-action="Register" asp-controller="Account"
                                                      class="link-danger">Register</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>
    
</section>